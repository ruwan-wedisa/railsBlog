
<div class="container col-sm-4">
<%= form_for:post, url:posts_path do |f|%>
<% if @post.errors.any?%>
<div class="err">
<h2><%= pluralize(@post.errors.count,"errors")%> preventerd from saving</h2>
<ul>
  <% @post.errors.full_messages.each do |msg|%>
  <li><%= msg %></li>
  <% end%>
</ul>
</div>

<% end%>
<p>
<%= f.label:title%><br>
<%= f.text_field:title,class:"form-control"%>
</p>

<p>
<%= f.label:body%><br>
<%= f.text_area :body,class:"form-control", cols: 40, rows: 15%>
</p>

<p>
<%= f.submit "Submit Post",class:"btn btn-primary"%>
</p>

<%end%>
</div>
