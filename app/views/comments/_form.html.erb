
<div class="col-sm-4">
<%= form_for([@post, @post.comments.build]) do |f| %>

	<%= f.label :name %><br>
	<%= f.text_field :name,class:"form-control" %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_area :body,class:"form-control" %><br>
	<br>
	<button type="submit" class="btn btn-primary">Comment</button>
<% end %>
</div>
